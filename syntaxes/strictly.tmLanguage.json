{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "strictly",
	"patterns": [
		{
			"include": "#view"
		},
		{
			"include": "#model"
		},
		{
			"include": "#style"
		},
		{
			"include": "#invalid"
		}
	],
	"repository": {
		"view": {
			"begin": "^view$",
			"patterns": [
				{
					"include": "#view-content"
				}
			],
			"end": "(?=^\\p{L})"
		},
		"view-content": {
			"patterns": [
				{
					"include": "#view-helper"
				},
				{
					"include": "#view-hostelement"
				},
				{
					"include": "#view-component"
				},
				{
					"include": "#options"
				},
				{
					"include": "#view-string"
				},
				{
					"include": "#invalid"
				}
			],
			"repository": {
				"view-helper": {
					"name": "keyword.control",
					"match": "^(\t)+#\\p{Ll}+($|(.)*)",
					"captures": {
						"2": {
							"patterns": [
								{
									"include": "#invalid"
								}
							]
						}
					}
				},
				"view-hostelement": {
					"name": "entity.name.tag",
					"match": "^(\t)+((\\p{Ll})+:)?(\\p{Ll})+($|(?={))"
				},
				"view-component": {
					"name": "entity.name.type",
					"match": "^(\t)+(\\p{Ll})+(\\p{Pd}(\\p{Ll})+)+($|(?={))"
				},
				"view-string": {
					"begin": "^(\t)+\"",
					"end": "\"",
					"patterns": [
						{
							"begin": "\\$\\{",
							"end": "\\}",
							"patterns": [{
								"include": "#righthandside"
							}]
						}, {
							"name": "string.quoted.double",
							"match": "."
						}
					]
				}
			}
		},
		"options": {
			"begin": "{\\s*",
			"end": "(\t)*}",
			"patterns": [
				{
					"match": "(\t)*((.)+)",
					"captures": {
						"2": {
							"patterns": [
								{
									"match": "((\\p{L})+)\\s*=\\s((.)+)$",
									"captures": {
										"1": {
											"name": "entity.other.attribute-name"
										},
										"3": {
											"patterns": [
												{
													"include": "#righthandside"
												}
											]
										}
									}
								},
								{
									"include": "#invalid"
								}
							]
						}
					}
				}
			]
		},
		"style": {
			"begin": "^(style)$",
			"patterns": [
				{
					"include": "#invalid"
				}
			],
			"end": "^(?=\\p{L})"
		},
		"model": {
			"begin": "^(model):((\\p{L})+)",
			"beginCaptures": {
				"2": {
					"name": "entity.name.function"
				}
			},
			"patterns": [
				{
					"include": "#options"
				}
			],
			"end": "(?=^\\p{L})"
		},
		"righthandside": {
			"patterns": [
				{
					"include": "#righthandside-functiondefinition"
				},
				{
					"include": "#righthandside-variable"
				},
				{
					"include": "#invalid"
				}
			],
			"repository": {
				"righthandside-functiondefinition": {
					"comment": "functionDefinition",
					"match": "((.)*)(->)\\s((.)+)",
					"captures": {
						"1": {
							"patterns": [
								{
									"begin": "",
									"while": ",",
									"patterns": [
										{
											"include": "#lefthandside"
										}
									]
								}
							]
						},
						"3": {
							"name": "entity.name.function"
						},
						"4": {
							"patterns": [
								{
									"include": "#righthandside"
								}
							]
						}
					}
				},
				"righthandside-variable": {
					"match": "(\\p{Ll}(\\p{L})*)",
					"name": "variable"
				}
			}
		},
		"lefthandside": {
			"patterns": [
				{
					"include": "#lefthandside-hole"
				},
				{
					"include": "#lefthandside-variable"
				},
				{
					"include": "#invalid"
				}
			],
			"repository": {
				"lefthandside-hole": {
					"match": "_",
					"name": "comment"
				},
				"lefthandside-variable": {
					"match": "\\p{L}+",
					"name": "variable.parameter"
				}
			}
		},
		"invalid": {
			"match": "(.)",
			"name": "invalid.illegal"
		}
	},
	"scopeName": "source.strictly"
}