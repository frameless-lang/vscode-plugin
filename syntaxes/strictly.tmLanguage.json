{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "strictly",
	"patterns": [
		{
			"include": "#view"
		},
		{
			"include": "#style"
		},
		{
			"include": "#invalid"
		}
	],
	"repository": {
		"view": {
			"begin": "^(view)$",
			"beginCaptures": {
				"1": {
					"name": "support.class"
				}
			},
			"patterns": [
				{
					"include": "#view-helpers"
				},
				{
					"include": "#view-hostelement"
				},
				{
					"include": "#view-component"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#invalid"
				}
			],
			"while": "^((\t)+|\n)"
		},
		"view-helpers": {
			"name": "keyword.control",
			"match": "#\\p{Ll}+(\n|\\s(.)*)",
			"captures": {
				"1": {
					"name": "comment"
				}
			}
		},
		"view-hostelement": {
			"name": "entity.name.tag",
			"match": "((\\p{Ll})+:)?(\\p{Ll})+(\\s|$|(?={))"
		},
		"view-component": {
			"name": "entity.name.function",
			"match": "(\\p{Ll})+(\\p{Pd}(\\p{Ll})+)+(\\s|$|(?={))"
		},
		"style": {
			"patterns": [
				{
					"match": "^style$",
					"name": "support.class"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.strictly",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"begin": "\\$\\{",
					"end": "\\}",
					"name": "variable"
				}
			]
		},
		"invalid": {
			"match": "(.)+",
			"name": "invalid.illegal"
		}
	},
	"scopeName": "source.strictly"
}