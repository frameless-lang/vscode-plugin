{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "strictly",
	"patterns": [
		{
			"include": "#view"
		},
		{
			"include": "#style"
		},
		{
			"include": "#invalid"
		}
	],
	"repository": {
		"view": {
			"begin": "^(view)$",
			"beginCaptures": {
				"1": {
					"name": "support.class"
				}
			},
			"patterns": [
				{
					"include": "#view-helpers"
				},
				{
					"include": "#view-hostelement"
				},
				{
					"include": "#view-component"
				},
				{
					"include": "#options"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#invalid"
				}
			],
			"end": "(?=^\\p{L})"
		},
		"view-helpers": {
			"name": "keyword.control",
			"match": "^(\t)+#\\p{Ll}+($|(.)*)",
			"captures": {
				"2": {
					"name": "comment"
				}
			}
		},
		"view-hostelement": {
			"name": "entity.name.tag",
			"match": "^(\t)+((\\p{Ll})+:)?(\\p{Ll})+($|(?={))"
		},
		"view-component": {
			"name": "entity.name.function",
			"match": "^(\t)+(\\p{Ll})+(\\p{Pd}(\\p{Ll})+)+($|(?={))"
		},
		"options": {
			"begin": "{\\s*",
			"end": "}",
			"patterns": []
		},
		"style": {
			"begin": "^(style)$",
			"beginCaptures": {
				"1": {
					"name": "support.class"
				}
			},
			"patterns": [
				{
					"match": "(\t)+(.)+",
					"name": "comment"
				}
			],
			"end": "^(?=\\p{L})"
		},
		"strings": {
			"name": "string.quoted.double.strictly",
			"begin": "^(\t)+\"",
			"end": "\"",
			"patterns": [
				{
					"begin": "\\$\\{",
					"end": "\\}",
					"name": "variable"
				}
			]
		},
		"invalid": {
			"match": "(.)+",
			"name": "invalid.illegal"
		}
	},
	"scopeName": "source.strictly"
}