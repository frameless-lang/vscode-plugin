{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "strictly",
	"patterns": [
		{
			"include": "#view"
		},
		{
			"include": "#model"
		},
		{
			"include": "#style"
		},
		{
			"include": "#invalid"
		}
	],
	"repository": {
		"view": {
			"begin": "^view$",
			"patterns": [
				{
					"include": "#view-helpers"
				},
				{
					"include": "#view-hostelement"
				},
				{
					"include": "#view-component"
				},
				{
					"include": "#options"
				},
				{
					"include": "#view-string"
				},
				{
					"include": "#invalid"
				}
			],
			"end": "(?=^\\p{L})"
		},
		"view-helpers": {
			"name": "keyword.control",
			"match": "^(\t)+#\\p{Ll}+($|(.)*)",
			"captures": {
				"2": {
					"name": "comment"
				}
			}
		},
		"view-hostelement": {
			"name": "entity.name.tag",
			"match": "^(\t)+((\\p{Ll})+:)?(\\p{Ll})+($|(?={))"
		},
		"view-component": {
			"name": "entity.name.type",
			"match": "^(\t)+(\\p{Ll})+(\\p{Pd}(\\p{Ll})+)+($|(?={))"
		},
		"view-string": {
			"name": "string.quoted.double",
			"begin": "^(\t)+\"",
			"end": "\"",
			"patterns": [
				{
					"begin": "\\$\\{",
					"end": "\\}",
					"name": "variable"
				}
			]
		},
		"options": {
			"begin": "{\\s*",
			"end": "(\t)*}",
			"patterns": [
				{
					"match": "(\t)*((=?})|(.))",
					"captures": {
						"4": {
							"patterns": [
								{
									"include": "#invalid"
								}
							]
						}
					}
				}
			]
		},
		"style": {
			"begin": "^(style)$",
			"patterns": [
				{
					"match": "(\t)+(.)+",
					"name": "comment"
				}
			],
			"end": "^(?=\\p{L})"
		},
		"model": {
			"begin": "^(model):((\\p{L})+)",
			"beginCaptures": {
				"2": {
					"name": "entity.name.function"
				}
			},
			"patterns": [
				{
					"include": "#options"
				}
			],
			"end": "(?=^\\p{L})"
		},
		"invalid": {
			"match": "(.)+",
			"name": "invalid.illegal"
		}
	},
	"scopeName": "source.strictly"
}