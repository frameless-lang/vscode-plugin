{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "frameless",
	"patterns": [
		{
			"include": "#root"
		}, {
			"include": "#invalid"
		}
	],
	"repository": {
		"root": {
			"repository": {
				"view": {
					"patterns": [
						{
							"match": "^view$",
							"name": "support.class"
						},
						{
							"include": "#helpers"
						},
						{
							"include": "#hostelement"
						},
						{
							"include": "#component"
						}
					],
					"repository": {
						"helpers": {
							"patterns": [
								{
									"name": "keyword.control",
									"match": "^[\t]+#[(a-z)]+(\\s|$)"
								}
							]
						},
						"hostelement": {
							"patterns": [
								{
									"name": "entity.name.tag",
									"match": "^[\t]+((\\p{Ll})+:)?(\\p{Ll})+(\\s|$)"
								}
							]
						},
						"component": {
							"patterns": [
								{
									"name": "entity.name.function",
									"match": "^[\t]+(\\p{Ll})+(\\p{Pd}(\\p{Ll})+)+(\\s|$)"
								}
							]
						}
					}
				},
				"style": {
					"patterns": [
						{
							"match": "^style$",
							"name": "support.class"
						}
					]
				}
			},
			"patterns": [
				{
					"include": "#view"
				},
				{
					"include": "#style"
				},
				{
					"include": "#strings"
				}
			]
		},
		"invalid": {
			"match": "^[[:print:]]+",
			"name": "invalid.illegal"
		},
		"strings": {
			"name": "string.quoted.double.frameless",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.frameless",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.frameless"
}