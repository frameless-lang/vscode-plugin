{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "frameless",
	"patterns": [
		{
			"include": "#view"
		},
		{
			"include": "#style"
		}
	],
	"repository": {
		"view": {
			"begin": "^(view)$",
			"beginCaptures": {
				"1": {
					"name": "support.class"
				}
			},
			"patterns": [
				{
					"include": "#helpers"
				},
				{
					"include": "#hostelement"
				},
				{
					"include": "#component"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#invalid"
				}
			],
			"while": "^((\t)+|\n)",
			"repository": {
				"helpers": {
					"name": "keyword.control",
					"match": "^#[(a-z)]+($|\\s(.)*)"
				},
				"hostelement": {
					"name": "entity.name.tag",
					"match": "^((\\p{Ll})+:)?(\\p{Ll})+(\\s|$)"
				},
				"component": {
					"name": "entity.name.function",
					"match": "^(\\p{Ll})+(\\p{Pd}(\\p{Ll})+)+(\\s|$)"
				}
			}
		},
		"helpers": {
			"name": "keyword.control",
			"match": "#[(a-z)]+(\\s|$)"
		},
		"hostelement": {
			"name": "entity.name.tag",
			"match": "((\\p{Ll})+:)?(\\p{Ll})+(\\s|$)"
		},
		"component": {
			"name": "entity.name.function",
			"match": "(\\p{Ll})+(\\p{Pd}(\\p{Ll})+)+(\\s|$)"
		},
		"style": {
			"patterns": [
				{
					"match": "^style$",
					"name": "support.class"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.frameless",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"begin": "\\$\\{",
					"end": "\\}",
					"name": "variable"
				}
			]
		},
		"invalid": {
			"match": "(.)+",
			"name": "invalid.illegal"
		}
	},
	"scopeName": "source.frameless"
}